.sticky-footer
  display: flex
  flex-flow: column
  min-height: 100vh
  > .content
    flex: 1

.vertical-centering
  display: flex
  > div
      margin: auto

.space-between
  display: flex
  justify-content: space-between
  align-items: center
  height: inherit
  > .left
    text-align: left
  > .center
    text-align: center
  > .right
    text-align: right

.container
  margin: 0 auto
  padding: 0 1rem
  min-width: 320px
  &.max-320
    padding: 0 1rem
    width: 320px

@media screen and (min-width: 480px)
  .container
    padding: 0 1.5rem
    width: 480px

@media screen and (min-width: 640px)
  .container
    padding: 0 2rem
    width: 640px

@media screen and (min-width: 960px)
  .container
    padding: 0 3rem
    width: 960px

@media screen and (min-width: 1280px)
  .container
    padding: 0 4rem
    width: 1280px
